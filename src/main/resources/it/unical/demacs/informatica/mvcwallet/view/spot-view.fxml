<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unical.demacs.informatica.mvcwallet.controller.SpotController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_RIGHT" spacing="30.0">
               <children>
                  <Label fx:id="balanceLabel" contentDisplay="RIGHT" style="-fx-font-size: 16;" styleClass="label-class" text="Balance">
                     <graphic>
                        <Label fx:id="totalLable" contentDisplay="RIGHT" prefHeight="30.0" style="-fx-font-size: 30;" styleClass="label-class" text="0">
                           <graphic>
                              <Label fx:id="currencyLabel" styleClass="label-class" text="USD">
                                 <padding>
                                    <Insets left="20.0" />
                                 </padding>
                              </Label>
                           </graphic>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </Label>
                     </graphic>
                     <padding>
                        <Insets right="150.0" />
                     </padding>
                  </Label>
                  <Button fx:id="depositButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onDepositClick" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <graphic>
                        <Label fx:id="depositLabel" text="Deposit" />
                     </graphic>
                  </Button>
                  <Button fx:id="withdrawButton" alignment="CENTER" contentDisplay="CENTER" layoutX="332.0" layoutY="25.0" mnemonicParsing="false" onAction="#onWithdrawClick" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <graphic>
                        <Label fx:id="withdrawLabel" text="Withdraw" />
                     </graphic>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets right="40.0" />
               </padding>
            </HBox>
            <HBox fx:id="makeTransfer" alignment="CENTER" spacing="30.0" visible="false">
               <children>
                  <Label fx:id="operationLabel" alignment="CENTER" prefHeight="30.0" style="-fx-font-size: 16;" styleClass="label-class" />
                  <TextField fx:id="amountTextField" alignment="CENTER" prefHeight="30.0" prefWidth="100.0" style="-fx-background-radius: 10; -fx-border-radius: 10;" />
                  <MenuButton fx:id="coinMenuButton" alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" text="Coin" />
                  <Button fx:id="confirmButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="30.0" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <graphic>
                        <Label fx:id="confirmLabel" text="Confirm" />
                     </graphic></Button>
                  <Button fx:id="cancelButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="30.0" textAlignment="CENTER">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <graphic>
                        <Label fx:id="cancelLable" text="Cancel" />
                     </graphic>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="272.0" prefWidth="600.0">
               <children>
                  <TableView fx:id="coinTable" prefHeight="272.0" prefWidth="600.0">
                    <columns>
                      <TableColumn fx:id="coinColmun" prefWidth="206.0" text="COINS" />
                      <TableColumn fx:id="amountColumn" prefWidth="179.0" text="AMOUNT" />
                        <TableColumn fx:id="equivalentColumn" prefWidth="214.0" text="EQUIVALENT" />
                    </columns>
                  </TableView>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</AnchorPane>
