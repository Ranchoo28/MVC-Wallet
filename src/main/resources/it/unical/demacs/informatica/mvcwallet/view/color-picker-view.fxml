                        <ColorPicker fx:id="mntColorPicker" maxHeight="50.0" minHeight="25.0" prefHeight="25.0" prefWidth="200.0" styleClass="button" />
                        <ColorPicker fx:id="sntColorPicker" maxHeight="50.0" minHeight="25.0" prefHeight="25.0" prefWidth="200.0" styleClass="button" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="applyButton" mnemonicParsing="false" onAction="#onApplyButton" text="Applica" />
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancButton" text="Annulla" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
