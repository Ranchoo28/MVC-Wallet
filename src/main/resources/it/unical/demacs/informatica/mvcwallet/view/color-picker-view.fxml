                        <ColorPicker fx:id="mbgColorPicker" maxHeight="50.0" minHeight="25.0" prefHeight="25.0" prefWidth="200.0" styleClass="button" />
                        <ColorPicker fx:id="sbgColorPicker" maxHeight="50.0" minHeight="25.0" prefHeight="25.0" prefWidth="200.0" styleClass="button" />
                        <ColorPicker fx:id="hovColorPicker" maxHeight="50.0" minHeight="25.0" prefHeight="25.0" prefWidth="200.0" styleClass="button" />
