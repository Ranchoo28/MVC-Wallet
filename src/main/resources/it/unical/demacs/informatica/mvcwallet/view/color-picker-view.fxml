                  <VBox alignment="CENTER_LEFT" spacing="15.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="50.0" minHeight="25.0" prefHeight="25.0" text="Sfondo primario" />
                        <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="50.0" minHeight="25.0" prefHeight="25.0" text="Sfondo secondario" />
