                        <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="50.0" minHeight="25.0" prefHeight="25.0" text="Testo primario" />
                        <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="50.0" minHeight="25.0" prefHeight="25.0" text="Testo secondario" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0" spacing="15.0">
